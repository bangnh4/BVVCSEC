# Đường dẫn này giúp CocoaPods tìm thấy các lệnh của Flutter trên máy ảo
load File.join(File.dirname(File.realpath(__FILE__)), 'Flutter', 'generated_plugin_registrant.rb')

platform :ios, '13.0'

# Quan trọng: Dòng này giúp Podfile hiểu các lệnh Flutter
target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Nếu lệnh này vẫn lỗi, chúng ta sẽ dùng cách dự phòng ở dưới
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
end