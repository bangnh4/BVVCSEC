platform :ios, '13.0'

if File.exist?(File.join(File.dirname(File.realpath(__FILE__)), 'Flutter', 'generated_plugin_registrant.rb'))
  load File.join(File.dirname(File.realpath(__FILE__)), 'Flutter', 'generated_plugin_registrant.rb')
end

use_modular_headers!

target 'Runner' do
  use_frameworks! :linkage => :static

  if respond_to?(:flutter_install_all_ios_pods)
    flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target) if respond_to?(:flutter_additional_ios_build_settings)
    
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0' [cite: 1, 4]
      
      # Giải pháp ép Xcode quét mọi ngóc ngách để tìm .h
      config.build_settings['HEADER_SEARCH_PATHS'] = [
        '$(inherited)',
        '${PODS_ROOT}/Headers/Public/Firebase',
        '${PODS_ROOT}/Headers/Public/cloud_firestore',
        '${PODS_ROOT}/Headers/Public/firebase_core',
        '${PODS_ROOT}/Headers/Public/firebase_auth',
        '${PODS_ROOT}/Headers/Public/firebase_database'
      ]
      
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES' [cite: 1, 4]
      config.build_settings['USER_HEADER_SEARCH_PATHS'] = '${PODS_ROOT}/Headers/Public/**'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64' [cite: 1, 4]
    end
  end
end